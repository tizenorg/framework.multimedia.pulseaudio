[Unit]
Description=pulseaudio service
After=syslog.target dbus.service alsa-restore.service

[Service]
ExecStartPre=/bin/mkdir -p /tmp/pulseaudio ; /usr/bin/chsmack -a pulseaudio -t /tmp/pulseaudio
ExecStart=/usr/bin/pulseaudio --system --log-level=4
Restart=always
Type=forking

[Install]
WantedBy=multi-user.target
